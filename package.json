    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\""
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-eslint": "^1.8.1"
  },
  "dependencies": {
    "eslint": "^9.31.0",
    "gsap": "^3.13.0",
    "prettier": "^3.6.2"
  }
}
